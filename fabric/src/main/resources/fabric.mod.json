{
    "schemaVersion": 1,
    "id": "ebwizardry",
    "version": "${version}",
    "name": "${mod_name}",
    "description": "${description}",
    "authors": [
        "${mod_author}"
    ],
    "contact": {
        "homepage": "https://fabricmc.net/"
    },
    "accessWidener" : "ebwizardry.accesswidener",
    "license": "${license}",
    "icon": "assets/ebwizardry/ebwizardry.png",
    "environment": "*",
    "entrypoints": {
        "main": [
            "com.electroblob.wizardry.WizardryFabricMod"
        ],
        "client": [
            "com.electroblob.wizardry.client.WizardryFabricClient"
        ],
        "cardinal-components": [
          "com.electroblob.wizardry.cca.EBEntityComponents"
        ]
    },
    "mixins": [
        "ebwizardry.mixins.json",
        "ebwizardry.fabric.mixins.json"
    ],
    "custom": {
        "cardinal-components": [
            "ebwizardry:wizard_data",
            "ebwizardry:summoned_entity_data",
            "ebwizardry:minion_data",
            "ebwizardry:conjure_item"
        ]
    },
    "depends": {
        "fabricloader": ">=0.14",
        "fabric": "*",
        "minecraft": "${minecraft_version}",
        "java": ">=17"
    },
    "recommends": {
        "accessories": "*"
    }
}
  